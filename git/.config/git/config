[user]
	email = japareaggae@gmail.com
	name = Renan Guilherme

[core]
	abbrev = 12

[init]
	defaultBranch = main

[push]
	default = simple

[pull]
	ff = only

[credential]
	helper = cache --timeout=3600

[alias]
	a = add
	ap = add -p
	b = branch -vv
	co = checkout
	d = diff
	dd = diff --cached
	f = fetch
	l = log --graph --decorate --stat --all
	l10 = log -10 --graph --decorate --stat --all
	reb = rebase
	s = status -sb

	fortune = !cowsay $(curl -s http://whatthecommit.com/index.txt)
	graph = log --graph --format=format:'%C(yellow)%h%Creset %C(bold blue)(%ar)%Creset - %C(bold green)%an%Creset - %s%C(bold red)%d%Creset'

