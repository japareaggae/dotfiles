[alias]
	a = add
	ap = add -p
	co = checkout
	d = diff
	dd = diff --cached
	l = log --decorate=short --stat
	l10 = log -10 --decorate=short --stat
	s = status -sb

	fortune = !cowsay $(curl -s http://whatthecommit.com/index.txt)
	going = push origin master
	graph = log --graph --format=format:'%C(yellow)%h%Creset %C(bold blue)(%ar)%Creset - %C(bold green)%an%Creset - %s'
	gud = !$HOME/.bin/gitgud

