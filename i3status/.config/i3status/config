# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	color_good = "#40FF40"
	color_degraded = "#FFFF40"
	color_bad = "#FF4040"
	interval = 5
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "time"

cpu_usage {
	format = " %usage"
	degraded_threshold = 80
	max_threshold = 95
}

cpu_temperature 0 {
	format = " %degrees°C"
	format_above_threshold = " %degrees°C"
	max_threshold = 80
}

memory {
	format = " %used"
	memory_used_method = memavailable
}

disk "/" {
	format = " %avail free"
	threshold_type = percentage_avail
	low_threshold = 10
}

wireless _first_ {
	format_up = " %essid: %ip"
	format_down = ""
}

ethernet _first_ {
	format_up = " %ip"
	format_down = ""
}

volume master {
	device = "pulse"
	format = " %volume"
	format_muted = " %volume"
}

battery all {
	format = "%status %percentage %remaining"
	format_down = ""
	low_threshold = 15
	threshold_type = percentage
}

time {
	format = "%Y-%m-%d %H:%M"
}

