#!/bin/sh
# ~/.xprofile - Scripts to run before starting X

### xinitrc.d - Sets X11 environment variables
if [ -d /etc/X11/xinit/xinitrc.d ]; then
	for f in /etc/X11/xinit/xinitrc.d/*; do
		[ -x "$f" ] && . "$f"
	done
	unset f
fi

### Path
export PATH="$HOME/.bin:${PATH}"

### Qt5 Configuration
if [ ! $XDG_CURRENT_DESKTOP ] || [ $XDG_CURRENT_DESKTOP != "KDE" ] && ( command -v qt5ct >/dev/null 2>&1 ); then
	export QT_QPA_PLATFORMTHEME="qt5ct"
fi

###  Xresources
[ -f ~/.Xresources ] && xrdb -merge ~/.Xresources

### Xmodmap
[ -f ~/.Xmodmap ] && xmodmap ~/.Xmodmap

### xset
[ -f ~/.bin/dim-screen ] && xset s 60 540 && xset dpms 605 605 605

# WM/DEs are not called on .xprofile. Use .xinitrc instead

