# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks

### Global properties
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=16
interval=3

### Blocks
[cpu_usage]
command=~/.config/i3blocks/cpu_usage
color=#FF4040
separator=false
separator_block_width=4

[temperature]
label=/
command=~/.config/i3blocks/temperature --chip coretemp-isa-0000
color=#FF4040

#[nv_temperature]
#command=~/.config/i3blocks/nvtemp
#color=#40FF40

[memory]
command=~/.config/i3blocks/usedmem
color=#FF8040

[disk]
command=df -hPl / | awk '/\/.*/ {print $3}'
label=/:
color=#FFFF40

[disk_home]
command=df -hPl /home | awk '/\/.*/ {print $3}'
label=/home:
color=#FFFF40

[network]
command=~/.config/i3blocks/network
color=#40FF40

[volume]
interval=once
command=~/.config/i3blocks/ponymix-block
signal=1

[mpd]
command=mpc current
color=#4040FF

[time]
command=date '+%Y-%m-%d %H:%M'

# vim: ft=dosini:
