alignment top_right
background no
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
double_buffer yes
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Terminus:size=8
gap_x 12
gap_y 12
minimum_size 200 200
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_argb_value 192
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
if_up_strictness link

TEXT
Hostname${alignr}${nodename}
Kernel${alignr}${kernel}
Uptime${alignr}${uptime}

CPU${alignr}${cpu cpu0}%
${cpugraph cpu0}
${cpubar cpu1}
${cpubar cpu2}
${cpubar cpu3}
${cpubar cpu4}
${top name 1}${alignr}${top cpu 1}%
${top name 2}${alignr}${top cpu 2}%
${top name 3}${alignr}${top cpu 3}%
${top name 4}${alignr}${top cpu 4}%

RAM${alignr}${mem} / ${memmax}
${memgraph}
${top_mem name 1}${alignr}${top_mem mem 1}%
${top_mem name 2}${alignr}${top_mem mem 2}%
${top_mem name 3}${alignr}${top_mem mem 3}%
${top_mem name 4}${alignr}${top_mem mem 4}%

Swap${alignr}${swap} / ${swapmax}
${swapbar}
Sollux${alignr}${fs_used /} / ${fs_size /}
${fs_bar /}
Terezi${alignr}${if_mounted /media/Terezi}${fs_used /media/Terezi} / ${fs_size /media/Terezi}${else}Not mounted${endif}
${if_mounted /media/Terezi}${fs_bar /media/Terezi}
${endif}
Volume${alignr}${if_running pulseaudio}${execi 4 /home/japareaggae/.bin/ponymix-conky}${else}${color red}N/A${color}${endif}
MPD${alignr}${if_running mpd}${color green}${mpd_status}${color}${else}${color red}Not running${color}${endif}
Scrobbler${alignr}${if_running mpdscribble}${color green}Listening${color}${else}${color red}Stopped${color}${endif}
${mpd_bar}
${if_mpd_playing}${alignc}${scroll 32 ${mpd_artist}}
${alignc}${scroll 32 ${mpd_title}}${else}${alignc}Zzz...${endif}

${if_up wlp4s0}Wi-Fi${alignr}${color green}connected${color}
SSID${alignr}${wireless_essid wlp4s0}
IP${alignr}${addr wlp4s0}
Signal${alignr}${wireless_link_qual_perc wlp4s0}%
Download${alignr}${downspeed wlp4s0}/s
${downspeedgraph wlp4s0}
Upload${alignr}${upspeed wlp4s0}/s
${upspeedgraph wlp4s0}
${else}Wi-Fi${alignr}${color red}disconnected${color}
${endif}
${if_up enp2s0}Ethernet${alignr}${color green}connected${color}
IP${alignr}${addr enp2s0}
Download${alignr}${downspeed enp2s0}/s
${downspeedgraph enp2s0}
Upload${alignr}${upspeed enp2s0}/s
${upspeedgraph enp2s0}${color}${endif}
