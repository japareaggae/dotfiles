#!/bin/sh
# xrandr-adjust: Automatically extend or disconnect video outputs
# Written by Renan Guilherme <japareaggae@gmail.com>
# Parts copied from ArchWiki <https://wiki.archlinux.org/index.php/xrandr>

if [ "$HOSTNAME" == "tidehunter" ]; then
	PRI="LVDS-1"
	EXT="HDMI-0"
	EXTMODE="--auto"
elif [ "$HOSTNAME" == "earthshaker" ]; then
	PRI="HDMI-A-0"
	EXT="HDMI-A-1"
	EXTMODE="--mode 1360x768"
fi

if (xrandr | grep "$EXT connected" > /dev/null); then
	xrandr --output $PRI --primary --auto \
		--output $EXT $EXTMODE --right-of $PRI
else
	xrandr --output $PRI --primary --auto \
		--output $EXT --off
fi

[[ -f "$HOME/.fehbg" ]] && $HOME/.fehbg

