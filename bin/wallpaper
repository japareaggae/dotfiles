#!/bin/sh
# TODO: Allow setting a mode instead of hardcoding one

MODE="--bg-fill"

if [ ! -x "$(which realpath)" ]; then
	echo "error: realpath is not installed"
	exit 1;
fi

case $1 in
	primary)   ln -sf "$(realpath "$2")" "$HOME/.wallpaper0" ;;
	secondary) ln -sf "$(realpath "$2")" "$HOME/.wallpaper1" ;;
	*)         echo "Usage: $(basename $0) [primary/secondary] [file]"; exit 1 ;;
esac

# Set wallpapers
feh $MODE "$HOME/.wallpaper0" "$HOME/.wallpaper1"

