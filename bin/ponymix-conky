#!/bin/sh
DEVICE=$(ponymix | sed -n '2p' -)
case $DEVICE in
		*"Headset"*) DEFSINK="Headset";;
		*"HDMI"*) DEFSINK="HDMI";;
		*"Analog"*) DEFSINK="Speakers";;
		*) DEFSINK="Unknown";;
esac

if ( ponymix is-muted ); then
	echo -n "$DEFSINK - $(ponymix get-volume)% (M)"
else
	echo -n "$DEFSINK - $(ponymix get-volume)%"
fi

