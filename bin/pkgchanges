#!/bin/sh
if [ $# -ne 2 ]; then
	echo "usage: pkgchanges [core/extra/community] [package]"
	exit 1
fi

if [ $1 == "core" ] || [ $1 == "extra" ]; then
	REPO="packages"
elif [ $1 == "community" ]; then
	REPO="community"
else
	echo "error: $1 is not a valid repository"
	exit 1
fi

xdg-open "https://projects.archlinux.org/svntogit/$REPO.git/log/trunk?h=packages/$2"

