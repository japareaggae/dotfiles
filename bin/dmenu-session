#!/bin/sh
option=$( echo -e "cancel\nlock\nlogout\nshutdown\nreboot\nsuspend\nhibernate" | dmenu -p Session )

case $option in
	lock) i3lock -c 000000 -p win;;
	logout) i3 exit;;
	shutdown) systemctl poweroff;;
	reboot) systemctl reboot;;
	suspend) systemctl suspend;;
	hibernate) systemctl hibernate;;
	*) ;;
esac
