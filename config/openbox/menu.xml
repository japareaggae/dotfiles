<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="root-menu" label="Openbox 3">
		<item label="Terminal">
			<action name="Execute">
				<execute>urxvt</execute>
			</action>
		</item>
		<item label="Thunar">
			<action name="Execute">
				<execute>thunar</execute>
			</action>
		</item>
		<item label="Chrome">
			<action name="Execute">
				<execute>google-chrome-unstable</execute>
			</action>
		</item>
		<separator/>
		<menu id="menu-accessories" label="Accessories">
			<item label="Catfish">
				<action name="Execute">
					<execute>catfish</execute>
				</action>
			</item>
			<item label="Galculator">
				<action name="Execute">
					<execute>galculator</execute>
				</action>
			</item>
		</menu>
		<separator/>
		<menu id="menu-settings" label="Settings">
			<menu id="menu-openbox" label="Openbox">
				<item label="Obconf">
					<action name="Execute">
						<execute>obconf</execute>
					</action>
				</item>
				<item label="Obmenu">
					<action name="Execute">
						<execute>obmenu</execute>
					</action>
				</item>
				<separator/>
				<item label=".openbox">
					<action name="Execute">
						<execute>thunar ~/.config/openbox</execute>
					</action>
				</item>
				<separator/>
				<item label="Reconfigure">
					<action name="Reconfigure"/>
				</item>
				<item label="Restart">
					<action name="Restart"/>
				</item>
			</menu>
			<item label="LXAppearance">
				<action name="Execute">
					<execute>lxappearance</execute>
				</action>
			</item>
			<item label="Nitrogen">
				<action name="Execute">
					<execute>nitrogen</execute>
				</action>
			</item>
		</menu>
		<separator/>
		<menu id="menu-leave" label="Leave">
			<item label="Lock">
				<action name="Execute">
					<execute>i3lock -c 000000 -p win</execute>
				</action>
			</item>
			<separator/>
			<item label="Logout">
				<action name="Exit">
					<prompt>yes</prompt>
				</action>
			</item>
			<separator/>
			<item label="Reboot">
				<action name="Execute">
					<execute>systemctl reboot</execute>
				</action>
			</item>
			<item label="Shutdown">
				<action name="Execute">
					<execute>systemctl poweroff</execute>
				</action>
			</item>
		</menu>
	</menu>
</openbox_menu>
